<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolyglotHelper.MainPage"
             xmlns:local="clr-namespace:PolyglotHelper.Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <local:TopMenu x:Name="TopMenu" Grid.Row="0"/>
        <local:MainMenu x:Name="MainMenu" Grid.Row="1"/>
        <local:BottomMenu x:Name="BottomMenu" Grid.Row="2"/>
    </Grid>

</ContentPage>
