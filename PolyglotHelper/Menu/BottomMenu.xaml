        <Button x:Name="CopyButton"
                Text="Copy"/>
        <Button x:Name="BlockWordButton"
                Text="Block Word"
                Grid.Column="1"/>
        <Button x:Name="BlockSentenceButton"
                Text="Block Sentence"
                Grid.Column="2"/>
        <Button x:Name="ImportButton"
                Text="Import"
                Grid.Column="5"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
